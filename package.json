{
  "name": "bomb-vite-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "prepare": "husky",
    "type-check": "turbo run type-check",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@changesets/cli": "^2.29.4",
    "@mono/tsconfig": "*",
    "husky": "^9",
    "lint-staged": "^15",
    "turbo": "^2.8.10",
    "typescript": "^5"
  },
  "packageManager": "yarn@4.12.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  }
}
